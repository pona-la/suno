---
import eventsData from "./2025.json";
import LocalTime from "@/components/LocalTime.astro";

interface Props {
  lang: "en" | "tok";
}

export interface EventData {
  duration: number;
  performer: string;
  title: string;
  categories: string[];
  language: string;
  description: string;
  stamp_start: number;
  stamp_end: number;
}

const { lang } = Astro.props;

const start = 1754717400;
const year = 2025;
const tracks = ["default"];
const track = "default";

// Filter events for this year
const events = eventsData as EventData[];
const durationMinutes = 1440;
---

<div class="schedule" style={`--duration:${durationMinutes}`}>
  <!-- Timezone Display -->
  <!-- <div class="timezone">Timezone: <span id="timezone">UTC</span></div>
  <script>
    document.querySelector('#timezone')!.textContent =
      new Date().toLocaleTimeString('en-US', { timeZoneName: 'short' }).split(' ')[2];
  </script> -->

    <!-- Track Headers -->
    <!-- {tracks.map((track) => (
      <div class="track not-phone" style={`--track:${track}`}>{track}</div>
    ))} -->

    <!-- Time Slots -->
    {Array.from({ length: Math.floor(durationMinutes / 10) }).map((_, i) => {
      const time = start + i * 600;
      const formatted = new Date(time * 1000);
      return (
        <div id={`time-${time}`} class="minute not-phone" style={`--row-start:${(time - start) / 60}`}>
          <LocalTime time={formatted} options={{hour: "2-digit", minute: "2-digit", hour12: false}}></LocalTime>
        </div>
      );
    })}

    <!-- Events -->
    {events
      .filter((event) => event.performer !== "break")
      .map((event) => {
        const startRow = (event.stamp_start - start) / 60;
        const endRow = (event.stamp_end - start) / 60;
        // const trackIndex = tracks.findIndex((t) => t === event.track) + 1;
        const classNames = [...(new Set(event.categories).intersection(new Set(["entertainment", "informational", "music", "game"])))].join(" ");

        const href = `/${year}/tenpo/${event.stamp_start}/`;

        const startTime = new Date(event.stamp_start * 1000).toLocaleTimeString([], { hour: "2-digit", minute: "2-digit" });
        const endTime = new Date(event.stamp_end * 1000).toLocaleTimeString([], { hour: "2-digit", minute: "2-digit", timeZoneName: "short" });

        return (
          <a
            id={`${track}-${startRow}`}
            class={classNames}
            style={`--row-start:${startRow}; --row-end:${endRow}`}
            href={href}
          >
            <div class="time phone-only">{startTime} - {endTime}</div>
            {event.duration >= 20 && <div class="performer">{event.performer}</div>}
            <div class="title">
              <span class="live">LIVE</span>
              {event.title.includes(" | ") ? event.title.split(" | ")[lang == "tok" ? 1 : 0] : event.title}
            </div>
              <div class={`description ${event.duration < 25 ? "phone-only" : ""}`} set:html={event.description.split(/(?<=>)(?=<)/)[lang == "tok" ? 1 : 0]}>
              </div>
            <!-- {event.duration >= 20 && (
              <ul class="categories">
                {event.categories.map((cat) => <li>{cat}</li>)}
              </ul>
            )} -->
          </a>
        );
      })}
</div>

<script is:inline>
  // Highlight the current time and event dynamically
  const now = new Date();

  document.querySelectorAll("[id^='time-']").forEach((el) => {
    const time = parseInt(el.id.split('-')[1]);
    const endTime = time + 600;
    const diff = new Date(endTime * 1000).getTime() - now.getTime();

    if (diff > 0) {
      if (new Date(time * 1000).getTime() - now.getTime() <= 0) {
        el.classList.add("current");
        el.scrollIntoView({ behavior: "instant", block: "center" });
      } else {
        setTimeout(() => {
          el.classList.add("current");
          el.scrollIntoView({ behavior: "smooth", block: "center" });
        }, new Date(time * 1000).getTime() - now.getTime());
      }

      setTimeout(() => el.classList.remove("current"), diff);
    }
  });
</script>

<style>
.schedule {
  display: grid;
  grid-template-rows: min-content [header] repeat(var(--duration)+1, 1fr); /* TODO: calc 1441 */
  grid-template-columns: min-content 1fr;
}
.minute {
  grid-row-start: calc(var(--row-start) + 2);
  grid-row-end: span 10;
  padding: 5px 10px;
  border-top: 1px solid var(--bg-2);
  color: var(--grey);
}

.minute.current {
  border-color: red;
  color: red;
}

a {
  display: block;
  margin-bottom: 1px;
  padding: 0.5rem 1rem;
  border: 1px solid var(--bg-1);
  border-left: 7px solid var(--bg-1);
  font-weight: unset;
  color: inherit;
  text-decoration: none;
  background-color: var(--bg-1);
  grid-row-start: calc(var(--row-start) + 2);
  grid-row-end: calc(var(--row-end) + 2);
  grid-column: 2;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
}

a:hover {
    background-color: var(--bg-2);
    border-color: var(--bg-2);
}

a.entertainment {
  border-left-color: light-dark(#f5c211, #f5c211)
}

a.informational {
    border-left-color: light-dark(#1c71d8, #1c71d8);]
}

a.game {
    border-left-color: light-dark(#2ec27e, #2ec27e);
}

a.music {
    border-left-color: light-dark(#e66100, #e66100);
}

a .performer,
a .description {
  font-size: 85%;
  line-height: 1.4em;
}

a .title {
  font-weight: bold;
}

a .live {
  display: none;
}

a.current {
  border-top-color: red;
  border-right-color: red;
  border-bottom-color: red;
}

a.current .live {
  display: unset;
  color: red;
}

.timezone {
  grid-column: span 2;
}

.phone-only { display: none; }
.not-phone { display: unset; }

@media (max-width: 700px) {
  .phone-only { display: unset; }
  .not-phone { display: none; }
  .schedule {
    display: block;
  }
  .timezone {
    display: none;
  }
}
</style>

