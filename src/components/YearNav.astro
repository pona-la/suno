---
interface Props {
  lang: "en" | "tok";
}
const years = ["2025", "2024", "2023", "2022", "2021"];
const { lang } = Astro.props;
---

<style>
  nav {
    width: 100%;
    padding: 20px 0px;
    text-align: center;
    border-top: 2px solid var(--accent);
    border-bottom: 2px solid var(--accent);
  }
</style>
<nav>
  {
    years
      .map((year) => <a href={`/${lang}/${year}`}>{year}</a>)
      .reduce((prev, curr, i) => (
        <>
          {prev} <b>{" Â· "}</b> {curr}
        </>
      ))
  }
</nav>
