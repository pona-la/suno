---
interface Props {
  time: Date;
  options?: Intl.DateTimeFormatOptions;
  locale?: string;
}
const { time, options = {}, locale = "en-US" } = Astro.props;
---

<style>
  time {
    white-space: nowrap;
  }
</style>
<time datetime={time.toISOString()}>
  {time.toLocaleString(locale, options)}
</time>
<script is:inline define:vars={{ time, options, locale }}>
  const el = document.currentScript.previousElementSibling;
  // el.textContent = new Date(time).toLocaleTimeString("en-us", options);
  el.textContent = new Date(time).toLocaleString(locale, options);
</script>
